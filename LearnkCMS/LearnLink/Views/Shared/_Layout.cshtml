@using FineBlog.Data;
@using FineBlog.ViewModels;
@inject ApplicationDbContext _context

@{
    var setting = _context.Settings!.ToList();
    var vm = new SettingVM()
    {
        SiteName = setting[0].SiteName,
        GithubUrl = setting[0].GithubUrl,
        FacebookUrl = setting[0].FacebookUrl,
        TwitterUrl = setting[0].TwitterUrl
    };
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="" />
    <meta name="author" content="" />
    <title>@ViewData["Title"] - @(vm.SiteName==null?"Site Name":vm.SiteName)</title>
    <link rel="icon" type="image/x-icon" href="~/pages/assets/favicon.ico" />
    <!-- Font Awesome icons (free version)-->
    <script src="https://use.fontawesome.com/releases/v6.1.0/js/all.js" crossorigin="anonymous"></script>
    <!-- Google fonts-->
    <link href="https://fonts.googleapis.com/css?family=Lora:400,700,400italic,700italic" rel="stylesheet" type="text/css" />
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300italic,400italic,600italic,700italic,800italic,400,300,600,700,800" rel="stylesheet" type="text/css" />
    <!-- Core theme CSS (includes Bootstrap)-->
    <link href="~/pages/css/styles.css" rel="stylesheet" />
</head>
<body>
    <!-- Navigation-->
    <nav class="navbar">
        <a href="~/">
            <img src="https://www.newcastle.edu.au/__data/assets/file/0011/661727/uon-logo-square.svg" alt="The University of Newcastle, Australia" class="img-logo">
        </a>
        <div class="dropdown">
            <button class="dropbtn">
                Student Resources
            </button>
            <div class="dropdown-content">
                <a href="https://learnlink.azurewebsites.net/contact-us">Contact Us</a>
                <a href="https://learnlink.azurewebsites.net/student-feedback">Student Feedback</a>
                <a href="https://learnlink.azurewebsites.net/course-enrolment">Course Enrolment</a>
                <a href="https://learnlink.azurewebsites.net/overseas-student">Overseas Student</a>
            </div>
        </div>
        <a class="nav-text" href="https://learnlink.azurewebsites.net/whats-new">What's New</a>
        <div class="dropdown">
            <button class="dropbtn_services">
                Services
            </button>
            <div class="dropdown-content-service">
                <a href="https://learnlink.azurewebsites.net/student-cares">Student Cares</a>
                <a href="https://learnlink.azurewebsites.net/location">Location</a>
                <a href="https://learnlink.azurewebsites.net/faculty">Faculty</a>
                <a href="https://learnlink.azurewebsites.net/facility">Facility</a>
            </div>
        </div>
        <a class="nav-text" href="https://learnlink.azurewebsites.net/about-singapore">About Singapore</a>

    </nav>
   
    <!-- Main Content-->
    @RenderBody()
   
    <!-- Footer-->
    <footer><p> <i class="far fa-copyright"></i> <strong>2024 University of Newcastle</strong> <i class="fab fa-facebook" style="float: right; font-size: 24px; padding-left: 10px;"></i>  <i class="fab fa-instagram" style="float: right; font-size: 24px; padding-left: 10px;"></i>  <i class="fab fa-twitter" style="float: right; font-size: 24px; padding-left: 10px;"></i>  <i class="fab fa-linkedin" style="float: right; font-size: 24px; padding-left: 10px;"></i>  <i class="fab fa-youtube" style="float: right; font-size: 24px; padding-left: 10px;"></i>  </p> </footer>
   
    <!-- Bootstrap core JS-->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <!-- Core theme JS-->
    <script src="~pages/js/scripts.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
    @await Component.InvokeAsync("Notyf")
</body>
</html>
